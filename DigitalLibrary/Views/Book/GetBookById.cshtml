@model BookModel

<div class="container">
    <div class="row mt-3">
        <div class="col">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.GalleryModel.Count(); i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i==0?"active":null)"></li>
                    }

                </ol>
                <div class="carousel-inner">
                    @if (Model.GalleryModel.Count() > 0)
                    {

                        for (int i = 0; i < Model.GalleryModel.Count(); i++)
                        {
                            <div class="@(i==0?"carousel-item active":"carousel-item")">
                                <img src="@Model.GalleryModel[i].Url" class="d-block w-100" alt="@Model.GalleryModel[i].Name">
                            </div>
                        }
                    }
                    else
                    {
                <div class="carousel-item active">
                    <img src="~/images/default.jpg" class="d-block w-100" alt="...">
                </div>
                        <div class="carousel-item">
                            <img src="~/images/default.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/default.jpg" class="d-block w-100" alt="...">
                        </div>
                    }

                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col">
            <h1>@Model.Title</h1>
            <h4>By: @Model.Author</h4>
            <a href="@Model.BookPdfUrl" target="_blank" class="btn btn-outline-primary mt-2 mb-2">Read Book</a>
            <p>@Model.Description</p>
            <ul class="list-group">
                <li class="list-group-item">Category: @Model.Category</li>
                <li class="list-group-item">Language: @Model.Language</li>
                <li class="list-group-item">Total Page: @Model.TotalPage</li>
            </ul>
        </div>
    </div>
</div>
<br />
<hr />
<div class="container">
    <h1>Similar Books</h1>
    <div class="row">
        <div class="col-6 col-md-4">
            <partial name="_bookThumbnail" model="new BookModel()"/>
        </div>
        <div class="col-6 col-md-4">
            <partial name="_bookThumbnail" model="new BookModel()" />
        </div>
        <div class="col-6 col-md-4">
            <partial name="_bookThumbnail" model="new BookModel()" />
        </div>
    </div>
</div>
